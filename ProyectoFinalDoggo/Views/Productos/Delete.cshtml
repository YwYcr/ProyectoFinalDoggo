@model ProyectoFinalDoggo.Models.Productos

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/DoggoLayout.cshtml";
}

<h2>Eliminar producto</h2>

<h3>Desea eliminar este producto?</h3>
<div>
    <h4>Productos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre de Producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomProducto)
        </dd>

        <dt>
            Precio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            Categoría
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria)
        </dd>

        <dt>
            Detalles
        </dt>

        <dd>
            @Html.DisplayFor(model => model.detalles)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Link de Imagen
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagen)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @if (Session != null && Session["usuario"] != null && Session["rol"].ToString() == "admin")
    {
        <div class="text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    }

    <div>
        <a href="@Url.Action("Index")" class="btn btn-dark bottom-right">Volver</a>
    </div>
</div>
    }
</div>
