@model ProyectoFinalDoggo.Models.Productos

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/DoggoLayout.cshtml";
}

<h2>Detalle productos</h2>

<div>
    <h4>Productos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomProducto)
        </dd>

        <dt>
            Precio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            Categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria)
        </dd>

        <dt>
            Detalles
        </dt>

        <dd>
            @Html.DisplayFor(model => model.detalles)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Link de Imagen
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagen)
        </dd>

    </dl>
</div>

<div class="text-center">
    @Html.ActionLink("Editar", "Edit", new { id = Model.IDProd }, new { @class = "btn btn-primary" })
</div>

<div>
    <a href="@Url.Action("Index")" class="btn btn-dark bottom-right">Volver</a>
</div>
